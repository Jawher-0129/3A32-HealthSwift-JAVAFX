<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.TilePane?>
<VBox alignment="TOP_CENTER" stylesheets="@../css/event.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.EvenementFront" prefHeight="600" prefWidth="800">
   <children>
      <Label  text="Derniers événements" textFill="#145fd7">
         <font>
            <Font name="System Italic" size="17.0" />
         </font></Label>
      <ScrollPane fx:id="latestEventsScrollPane" hbarPolicy="ALWAYS" prefHeight="240.0" prefWidth="400.0">
         <content>
            <HBox fx:id="latestEventsBox" alignment="TOP_LEFT" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </content>
      </ScrollPane>
      <Label text="Tous les événements" textFill="#145fd7">
         <font>
            <Font name="Arial Italic" size="17.0" />
         </font></Label>
      <ScrollPane prefHeight="415.0" prefWidth="400.0">
         <content>
            <TilePane fx:id="cardsContainer" alignment="CENTER" hgap="10.0" vgap="10.0" prefColumns="6" >
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TilePane>
         </content>
      </ScrollPane>
   </children>
</VBox>