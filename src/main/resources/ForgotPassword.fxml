<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="547.0" prefWidth="854.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ForgotPassword">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <AnchorPane prefHeight="384.0" prefWidth="814.0" style="-fx-background-color: #42A9E6;" />
    <TextField fx:id="emailField" prefHeight="26.0" prefWidth="360.0" promptText="Email" />

    <Button onAction="#sendVerificationCode" prefHeight="26.0" prefWidth="468.0" text="Send Code" />
    <TextField fx:id="verificationCodeField" promptText="code" />

    <!-- Remove the new password fields -->

    <Button onAction="#resetPassword" prefHeight="26.0" prefWidth="466.0" text="Reset Password" />
</VBox>
