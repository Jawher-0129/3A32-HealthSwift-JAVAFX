<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="547.0" prefWidth="854.0" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResetPassword">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <AnchorPane prefHeight="384.0" prefWidth="814.0" style="-fx-background-color: #42A9E6;" />
    <PasswordField fx:id="newPasswordField" prefHeight="26.0" prefWidth="470.0" promptText="New Password" />
    <PasswordField fx:id="confirmNewPasswordField" promptText="Confirm New Password" />

    <!-- Button to reset password -->
    <Button onAction="#resetPassword" prefHeight="26.0" prefWidth="578.0" text="Reset Password" />
</VBox>
