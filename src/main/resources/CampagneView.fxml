<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CampagneViewController" prefHeight="700.0" prefWidth="1100.0" stylesheets="@StyleSheets/CampagneView.css">
   <children>
        <VBox AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" prefHeight="700.0" prefWidth="1100.0">
            <children>
                <Label text="Explorez les Campagnes" style="-fx-font-size: 24px; -fx-padding: 10px;" />
                <Button fx:id="addCampagneButton" text="Add Campaign" style="-fx-margin: 10px;"/>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
                    <content>
                        <TilePane fx:id="campagneContainer" prefColumns="3" hgap="10" vgap="10">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>
                        </TilePane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
