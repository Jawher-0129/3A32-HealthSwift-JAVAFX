<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controller.CampagneViewController" prefHeight="600" prefWidth="800">
    <children>
        <!-- Header label for the campaign view -->
        <Label text="Explorez les Campagnes" style="-fx-font-size: 24px; -fx-padding: 10px;" />
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <content>
                <TilePane fx:id="campagneContainer" prefColumns="4" hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <!-- Campaign cards will be dynamically added here -->
                </TilePane>
            </content>
        </ScrollPane>
    </children>
</VBox>
