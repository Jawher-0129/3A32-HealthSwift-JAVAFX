<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.StatisticsController" prefHeight="700.0" prefWidth="1200">

    <!-- Define column constraints -->
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
        <ColumnConstraints hgrow="ALWAYS" percentWidth="50" />
    </columnConstraints>

    <!-- Define row constraints -->
    <rowConstraints>
        <RowConstraints percentHeight="50" vgrow="ALWAYS" />
        <RowConstraints percentHeight="50" vgrow="ALWAYS" />
    </rowConstraints>

    <!-- Chart 1 -->
    <BarChart fx:id="donationsPerCampaignChart" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <xAxis><CategoryAxis label="Campaign ID" /></xAxis>
        <yAxis><NumberAxis label="Donations" prefHeight="311.0" prefWidth="49.0" /></yAxis>

    </BarChart>

    <!-- Chart 2 -->
    <BarChart fx:id="donationsPerMonthChart" GridPane.columnIndex="1" GridPane.rowIndex="0">
        <xAxis><CategoryAxis label="Month" /></xAxis>
        <yAxis><NumberAxis label="Donations" /></yAxis>

    </BarChart>

    <!-- Chart 3 -->
    <BarChart fx:id="campaignsPerMonthChart" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <xAxis><CategoryAxis label="Month" /></xAxis>
        <yAxis><NumberAxis label="Campaigns" /></yAxis>
    </BarChart>




</GridPane>
