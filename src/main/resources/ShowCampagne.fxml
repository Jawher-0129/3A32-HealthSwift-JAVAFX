<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToWidth="true" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ShowCampagneController" stylesheets="@StyleSheets/Details.css">
    <content>
        <VBox fx:id="detailsBox" spacing="10" styleClass="vbox">
            <children>
                <!-- Back button with arrow graphic -->
                <HBox alignment="TOP_LEFT"> <!-- Panel for the back button -->
                    <Button fx:id="backButton" onAction="#handleBack" text="&lt;&lt;" styleClass="back-button"/>
                </HBox>
                <Label text=" Détails de la campagne" styleClass="title"/>
                <Label fx:id="titleLabel" text="Titre de la Campagne:" styleClass="label"/>
                <Label fx:id="titleValue" styleClass="label"/>
                <Label fx:id="descriptionLabel" text="Description:" styleClass="label"/>
                <Label fx:id="descriptionValue" wrapText="true" styleClass="label"/>
                <Label fx:id="startDateLabel" text="Date de Début:" styleClass="label"/>
                <Label fx:id="startDateValue" styleClass="label"/>
                <Label fx:id="endDateLabel" text="Date de Fin:" styleClass="label"/>
                <Label fx:id="endDateValue" styleClass="label"/>
                <ImageView fx:id="imageView" fitWidth="200" fitHeight="200" preserveRatio="true"/>
                <HBox spacing="10" alignment="CENTER">
                <Button fx:id="updateButton" text="Modifier" styleClass="button" onAction="#handleModify"/>
                <Button fx:id="deleteButton" text="Supprimer" styleClass="button" onAction="#handleDelete"/>
                    <!-- New button for Donate Now -->
                    <Button text="Donate Now!" styleClass="button" onAction="#openDonationForm"/>

                </HBox>
            </children>
        </VBox>
    </content>
</ScrollPane>
